<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="290.0" prefWidth="300.0" style="-fx-border-color: lightgray; -fx-background-color: white;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER" spacing="15.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="10.0" AnchorPane.bottomAnchor="10.0">
         <children>
            <Label fx:id="lblTitle" text="Title">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label fx:id="lblCost" text="Cost">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Button fx:id="btnAddToCart" text="Add to Cart" minWidth="110.0" onAction="#btnAddToCartClicked"/>
                  <Button fx:id="btnPlay" text="Play" minWidth="100.0" onAction="#btnPlayClicked"/>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
